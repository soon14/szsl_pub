<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- 搜索框 -->
    <RelativeLayout
        android:id="@+id/rl_search"
        style="@style/search_style_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            style="@style/search_style_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 搜索图标 -->

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_search"
                android:contentDescription="@null"/>


            <!-- 搜索内容框 -->

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@id/iv_search"
                android:background="@null"
                android:hint="请输入医生名字"
                android:singleLine="true"
                android:textColorHint="@color/bg_search"
                android:textSize="15sp"/>

            <!-- 清除按钮 -->

            <ImageButton
                android:id="@+id/ib_search_clear"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:background="@drawable/editclear_n"
                android:contentDescription="@null"/>
        </RelativeLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_doctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>