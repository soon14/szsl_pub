<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/dialog_select"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:id="@+id/ll_other"
            >

            <TextView
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dip"
                android:text="80"
                android:textColor="@color/actionbar_bg"
                android:textSize="16sp" 
                android:id="@+id/tv_value_other"
                />

            <TextView
                android:id="@+id/tv_time_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="2015-7-22 21:59"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#d3d3d3"
                android:textSize="16sp" 
                android:gravity="right"
                android:paddingRight="20dp"
                />
        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/dialog_select"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:id="@+id/ll_bp"
            android:visibility="gone"
            >

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:layout_marginLeft="19dip"
                 android:orientation="vertical" >
                 <TextView
                     android:id="@+id/tv_value_sbp"
                     android:layout_width="90dip"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:text="80"
                     android:textColor="@color/actionbar_bg"
                     android:textSize="16sp" />
                 <TextView
                     android:id="@+id/tv_value_dbp"
                     android:layout_width="90dip"
                     android:layout_height="0dp"
                     android:layout_weight="1"
                     android:text="80"
                     android:textColor="@color/actionbar_bg"
                     android:textSize="16sp" />
             </LinearLayout>

            <TextView
                android:id="@+id/tv_time_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="2015-7-22 21:59"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#d3d3d3"
                android:textSize="16sp" 
                android:gravity="right"
                android:paddingRight="20dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        

    </LinearLayout>

</LinearLayout>