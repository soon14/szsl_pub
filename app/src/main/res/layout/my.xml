<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:background="@color/actionbar_bg"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <com.app.tanklib.bitmap.view.RoundImageView
            android:id="@+id/header"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginLeft="19dip"
            android:layout_marginRight="18dip"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textColor="@color/white"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg"
        android:orientation="vertical"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:layout_marginTop="15dp"
            android:background="@color/divider2bg"
            />

        <RelativeLayout
            android:id="@+id/ll_myinfo"
            style="@style/settingLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="完善信息"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_myfamily"
            style="@style/settingLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="我的家庭"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:background="@color/divider2white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_orderhistroy"
            style="@style/settingLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="预约记录"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:background="@color/divider2white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_insuranceinfo"
            style="@style/settingLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="医保信息"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:background="@color/divider2white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_mynote"
            style="@style/settingLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="我的票据"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:background="@color/divider2white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_visit"
            style="@style/settingLayout"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="就诊历史"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:background="@color/divider2white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_sweep"
            style="@style/settingLayout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="扫一扫"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dip"
                android:background="@color/divider2white"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:layout_marginTop="15dip"
            android:background="@color/divider2bg"/>

        <RelativeLayout
            android:id="@+id/ll_setting"
            style="@style/settingLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="设置"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:src="@drawable/arrow_right"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:background="@color/divider2bg"/>
    </LinearLayout>
</LinearLayout>