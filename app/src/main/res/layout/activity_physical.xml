<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical">

    <com.app.tanklib.view.BsoftActionBar
        android:id="@+id/actionbar"
        style="@style/BsoftActionBar">
    </com.app.tanklib.view.BsoftActionBar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--中心简介-->
            <LinearLayout
                android:id="@+id/ll_intro"
                style="@style/home_layout_horizontal_style"
                android:layout_height="100dp">

                <LinearLayout
                    style="@style/home_layout_child_style"
                    android:background="@drawable/home_zxjj"/>

                <TextView
                    style="@style/home_text_style"
                    android:text="@string/health_center"/>
            </LinearLayout>

            <!--vip中心-->
            <LinearLayout
                android:id="@+id/ll_vip_intro"
                style="@style/home_layout_horizontal_style"
                android:layout_height="100dp">

                <LinearLayout
                    style="@style/home_layout_child_style"
                    android:background="@drawable/home_zxjj"/>

                <TextView
                    style="@style/home_text_style"
                    android:text="@string/especial_center"/>
            </LinearLayout>
            <!--肿瘤筛查-->
            <LinearLayout
                android:id="@+id/ll_tumour_intro"
                style="@style/home_layout_horizontal_style"
                android:layout_height="100dp">

                <LinearLayout
                    style="@style/home_layout_child_style"
                    android:background="@drawable/home_zxjj"/>

                <TextView
                    style="@style/home_text_style"
                    android:text="肿瘤筛查"/>
            </LinearLayout>
            <!--体检报告-->
            <LinearLayout
                android:id="@+id/ll_report"
                style="@style/home_layout_horizontal_style"
                android:layout_height="100dp">

                <LinearLayout
                    style="@style/home_layout_child_style"
                    android:background="@drawable/home_tjbg"/>

                <TextView
                    style="@style/home_text_style"
                    android:text="体检报告"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
