<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <com.app.tanklib.view.BsoftActionBar
        android:id="@+id/actionbar"
        style="@style/BsoftActionBar" >
    </com.app.tanklib.view.BsoftActionBar>

    <ScrollView
        android:id="@+id/mainView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@color/white"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/divider2bg" />

                <RelativeLayout
                    android:id="@+id/layout1"
                    style="@style/settingLayout" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="*就诊时间"
                            android:textColor="@color/actionbar_bg"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="请选择就诊时间"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <RelativeLayout
                    android:id="@+id/layout2"
                    style="@style/settingLayout" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="*医院"
                            android:textColor="@color/actionbar_bg"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/hosname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:text="请选择医院"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <RelativeLayout
                    android:id="@+id/layout3"
                    style="@style/settingLayout" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="*科室"
                            android:textColor="@color/actionbar_bg"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/deptname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:text="请选择科室"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <RelativeLayout
                    style="@style/settingLayout" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="*医生姓名"
                            android:textColor="@color/actionbar_bg"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/docname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:background="@null"
                            android:hint="输入医生姓名"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#d3d3d3"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <RelativeLayout
                  android:id="@+id/layout4"
                    style="@style/settingLayout" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:text="*医生诊断"
                            android:textColor="@color/actionbar_bg"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/diagnose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="请填写"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <RelativeLayout style="@style/settingLayout"  android:id="@+id/layout5"  >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="90dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dip"
                            android:text="医生建议"
                            android:textColor="@color/actionbar_bg"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/treatopinion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dip"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="请填写"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="上传处方图片"
                    android:textColor="@color/actionbar_bg"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/piclayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <!--
                    <ImageView
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" />

                    <ImageView
                        android:id="@+id/b2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/b3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/b4"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" android:visibility="gone"/>
                    -->
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:layout_marginLeft="20dip"
                    android:background="@color/divider2white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="上传检查报告图片"
                    android:textColor="@color/actionbar_bg"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/piclayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <!--
                    <ImageView
                        android:id="@+id/p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" />

                    <ImageView
                        android:id="@+id/p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/p3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/p4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/pic_add" android:visibility="gone"/>
                    -->
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dip"
                    android:background="@color/divider2bg" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>