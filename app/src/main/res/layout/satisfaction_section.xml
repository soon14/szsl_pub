<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           	android:padding="10dp"
			android:gravity="center_vertical"
            android:id="@+id/ll_question"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务态度："
                android:textSize="16sp"
                android:id="@+id/tv_title"
                android:layout_centerVertical="true"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:id="@+id/ll_star"
                >
                <Button
                    style="@style/btn_star_style"
                    android:background="@drawable/ratingbar_bg_n"
                    android:id="@+id/btn_star_1"
                    />
                <Button
                    style="@style/btn_star_style"
                    android:background="@drawable/ratingbar_bg_n"
                    android:id="@+id/btn_star_2"
                    />
                <Button
                    style="@style/btn_star_style"
                    android:background="@drawable/ratingbar_bg_n"
                    android:id="@+id/btn_star_3"
                    />
                <Button
                    style="@style/btn_star_style"
                    android:background="@drawable/ratingbar_bg_n"
                    android:id="@+id/btn_star_4"
                    />
                <Button
                    style="@style/btn_star_style"
                    android:background="@drawable/ratingbar_bg_n"
                    android:id="@+id/btn_star_5"
                    />
            </LinearLayout>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content"
                android:text=""
                android:layout_marginRight="10dp"
                android:textColor="#f4a254"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

</LinearLayout>
