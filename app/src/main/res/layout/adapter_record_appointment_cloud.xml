<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_doctor"
                style="@style/ll_appoint_history_item_style">

                <TextView
                    style="@style/tv_appoint_history_item_title_style"
                    android:text="专家医生"/>

                <TextView
                    android:id="@+id/tv_doctor"
                    style="@style/tv_appoint_history_item_content_style"
                    android:text="胡秀晶"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_1"
                style="@style/ll_appoint_history_item_style">

                <TextView
                    style="@style/tv_appoint_history_item_title_style"
                    android:text="预约科室"/>

                <TextView
                    android:id="@+id/tv_dept"
                    style="@style/tv_appoint_history_item_content_style"
                    android:text="呼吸内科"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                style="@style/ll_appoint_history_item_style">

                <TextView
                    style="@style/tv_appoint_history_item_title_style"
                    android:text="患者姓名"/>

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/tv_appoint_history_item_content_style"
                    android:text="张三"
                    />

                <TextView style="@style/tv_content_style"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4"
                style="@style/ll_appoint_history_item_style">

                <TextView
                    style="@style/tv_appoint_history_item_title_style"
                    android:text="预约时间"/>

                <TextView
                    android:id="@+id/tv_yyrq"
                    style="@style/tv_content_style"
                    android:text="2015-9-14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:background="@color/bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_djrq"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="2015-09-14 10:18:14"
                    android:textColor="#999999"/>

                <TextView
                    android:id="@+id/tv_del"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bigbut_light_gray"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="取消预约"
                    android:textColor="#999999"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="预约成功"
            android:textColor="#5ccd4a"
            android:textSize="16sp"/>
    </RelativeLayout>


</LinearLayout>