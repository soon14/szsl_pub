<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.app.tanklib.view.BsoftActionBar
        android:id="@+id/actionbar"
        style="@style/BsoftActionBar" >
    </com.app.tanklib.view.BsoftActionBar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/bigbut_white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout style="@style/ll_select_date_sytle" >

            </LinearLayout>
            <View style="@style/vertical_line_select_date_style" />

                <TextView
                    android:id="@+id/tv_date_1"
                    style="@style/tv_select_date_style"
                    android:text="今天\n你好" />
                <View style="@style/vertical_line_select_date_style" />
                <TextView
                    android:id="@+id/tv_date_2"
                    style="@style/tv_select_date_style"
                    />

            <View style="@style/vertical_line_select_date_style" />
			
             <TextView
                android:id="@+id/tv_date_3"
                style="@style/tv_select_date_style" />

            <View style="@style/vertical_line_select_date_style" />

            <TextView
                android:id="@+id/tv_date_4"
                style="@style/tv_select_date_style" />

            <View style="@style/vertical_line_select_date_style" />

            <TextView
                android:id="@+id/tv_date_5"
                style="@style/tv_select_date_style" />

            <View style="@style/vertical_line_select_date_style" />

            <TextView
                android:id="@+id/tv_date_6"
                style="@style/tv_select_date_style" />

            <View style="@style/vertical_line_select_date_style" />

            <TextView
                android:id="@+id/tv_date_7"
                style="@style/tv_select_date_style" />
        </LinearLayout>

    <View style="@style/horizontal_line_select_date_style" />

    <LinearLayout
        android:id="@+id/ll_am"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout style="@style/ll_select_date_sytle" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午" />
        </LinearLayout>

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_1"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_2"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_3"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_4"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_5"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_6"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_am_7"
            style="@style/tv_select_date_am_style" />
    </LinearLayout>

    <View style="@style/horizontal_line_select_date_style" />

    <LinearLayout
        android:id="@+id/ll_pm"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout style="@style/ll_select_date_sytle" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下午" />
        </LinearLayout>

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_pm_1"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_pm_2"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_pm_3"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView style="@style/tv_select_date_am_style" 
            android:id="@+id/tv_pm_4"
            />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_pm_5"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_pm_6"
            style="@style/tv_select_date_am_style" />

        <View style="@style/vertical_line_select_date_style" />

        <TextView
            android:id="@+id/tv_pm_7"
            style="@style/tv_select_date_am_style" />
    </LinearLayout>

</LinearLayout>

</LinearLayout>