<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.app.tanklib.view.BsoftActionBar
        android:id="@+id/actionbar"
        style="@style/BsoftActionBar"/>

    <View
        style="@style/line_outer"/>

    <LinearLayout
        android:id="@+id/layout_name"
        style="@style/ExpressReceiverLayout">

        <TextView
            style="@style/address_text"
            android:text="收件人姓名"/>

        <EditText
            android:id="@+id/et_name"
            style="@style/address_editText"/>
    </LinearLayout>

    <View
        style="@style/line_inner"/>

    <LinearLayout
        android:id="@+id/layout_mobile"
        style="@style/ExpressReceiverLayout">

        <TextView
            style="@style/address_text"
            android:text="手机号码"/>

        <EditText
            android:id="@+id/et_mobile"
            style="@style/address_editText"
            android:inputType="phone"/>
    </LinearLayout>

    <View
        style="@style/line_inner"/>

    <LinearLayout
        android:id="@+id/layout_province"
        style="@style/ExpressReceiverLayout">

        <TextView
            style="@style/address_text"
            android:text="省市区"/>

        <TextView
            android:id="@+id/tv_province"
            style="@style/address_editText"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:hint="请选择"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_more"/>
    </LinearLayout>

    <View
        style="@style/line_inner"/>

    <LinearLayout
        android:id="@+id/layout_address"
        style="@style/ExpressReceiverLayout">

        <TextView
            style="@style/address_text"
            android:text="详细地址"/>

        <EditText
            android:id="@+id/et_address"
            style="@style/address_editText"
            android:hint="请输入"/>
    </LinearLayout>

    <View
        style="@style/line_inner"/>

    <LinearLayout
        android:id="@+id/layout_postcode"
        style="@style/ExpressReceiverLayout">

        <TextView
            style="@style/address_text"
            android:text="邮政编码"/>

        <EditText
            android:id="@+id/et_postcode"
            style="@style/address_editText"
            android:hint="请输入"/>
    </LinearLayout>

    <View
        style="@style/line_outer"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/padding_16"
        android:background="@drawable/bigbut_blue"
        android:text="保存"
        android:textColor="@color/white"/>
</LinearLayout>