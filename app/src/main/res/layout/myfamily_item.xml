<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="18dip"
        android:layout_marginTop="19dip"
        android:text="*验证成功后可帮助家庭成员管理健康信息"
        android:textColor="#757575"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dip"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="9dip"
        android:background="@drawable/family_corners_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.app.tanklib.bitmap.view.RoundImageView
                android:id="@+id/header"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginBottom="18dip"
                android:layout_marginLeft="17dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="18dip"
                android:src="@drawable/avatar_none" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/relation"
                    android:layout_width="60dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bigbut_green"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/mid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relation"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/statue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2087ac"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mid"
                    android:layout_marginTop="10dip"
                    android:textColor="#908D88"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/idcard"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="4dip"
                    android:paddingBottom="8dip"
                    android:singleLine="true"
                    android:text="点击验证>>"
                    android:textColor="#2087ac"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="2dip"
            android:background="#D7D4CF"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginBottom="5dip"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_select"
                android:gravity="center"
                android:text="生长曲线"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="0.6dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/divider2white" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_select"
                android:gravity="center"
                android:text="接种计划"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="0.6dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@color/divider2white" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:background="@drawable/dialog_select"
                android:gravity="center"
                android:text="儿保预约"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>